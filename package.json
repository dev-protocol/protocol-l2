{
	"name": "@devprotocol/protocol-optimism",
	"version": "0.0.1",
	"description": "Securitize for Internet assets",
	"scripts": {
		"test": "yarn test:arb",
		"generate": "yarn compile && typechain --target truffle './build/**/*.json'",
		"deploy": "truffle migrate --network",
		"predeploy": "yarn build",
		"lint": "yarn lint:eslint && yarn lint:solhint && yarn lint:format",
		"lint:eslint": "eslint . --ext .ts,.js --fix",
		"lint:solhint": "solhint --fix --max-warnings 0 \"contracts/**/*.sol\"",
		"lint:format": "prettier --write '**/*.{sol,ts,js,json,md,yml}'",
		"prepack": "yarn build",
		"build": "tsc -p tsconfig.build.json",
		"prebuild": "del 'migrations/**/*.js' 'scripts/**/*.js' && yarn generate",
		"prepare": "husky install",
		"compile": "truffle compile && yarn compile:arb",
		"test:arb": "truffle test --config truffle-config.arbitrum.js",
		"compile:arb": "truffle compile --config truffle-config.arbitrum.js"
	},
	"files": [
		"contracts/interface"
	],
	"author": "aggre",
	"license": "MPL-2.0",
	"devDependencies": {
		"@devprotocol/util-ts": "2.2.1",
		"@truffle/hdwallet-provider": "1.5.0",
		"@types/bent": "7.3.2",
		"@types/dotenv": "8.2.0",
		"@types/node": "14.17.15",
		"@types/shelljs": "0.8.9",
		"@typescript-eslint/eslint-plugin": "4.31.0",
		"@typescript-eslint/parser": "4.31.0",
		"bent": "7.3.12",
		"bignumber.js": "9.0.1",
		"del-cli": "4.0.1",
		"dotenv": "10.0.0",
		"eslint": "7.32.0",
		"eslint-config-prettier": "8.3.0",
		"eslint-config-xo": "0.38.0",
		"eslint-config-xo-typescript": "0.37.0",
		"husky": "7.0.2",
		"p-queue": "7.1.0",
		"prettier": "2.4.0",
		"prettier-plugin-solidity": "1.0.0-beta.18",
		"solhint": "3.3.6",
		"truffle": "5.4.1",
		"truffle-typings": "1.0.8",
		"ts-generator": "0.1.1",
		"ts-node": "10.2.1",
		"typechain": "4.0.3",
		"typechain-target-truffle": "1.0.2",
		"typescript": "4.4.3",
		"web3": "1.5.2"
	},
	"dependencies": {
		"@devprotocol/util-contracts": "3.3.0",
		"@openzeppelin/contracts": "4.3.1",
		"@openzeppelin/contracts-upgradeable": "4.3.1"
	},
	"directories": {
		"doc": "docs",
		"test": "test"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dev-protocol/protocol.git"
	},
	"bugs": {
		"url": "https://github.com/dev-protocol/protocol/issues"
	},
	"homepage": "https://github.com/dev-protocol/protocol#readme"
}
